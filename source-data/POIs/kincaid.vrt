<OGRVRTDataSource>
    <OGRVRTLayer name="kincaid">
        <!--
        	note that this is relative to the scripts directory
        -->
        <SrcDataSource>../source-data/POIs/kincaid.csv</SrcDataSource>
        <GeometryType>wkbPoint</GeometryType>
        <LayerSRS>WGS84</LayerSRS>
        <GeometryField encoding="PointFromColumns" x="longitude" y="latitude"/>
    </OGRVRTLayer>
</OGRVRTDataSource>